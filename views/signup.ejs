 <!-- signup -->
    <body>
	   <h1 class="hd text-center">Create Account</h1>
        <div class="signin">
            <div class="container">
                <div class="img">
                    <img src="/images/signin.png">
                </div>
        
               
                <div class="login-content" id="signup">
                    <form action="/user/signup" method="POST">
                        <img src="/images/avatar.png">
                           
                        <div class="input-div one">
                              <div class="i">
                                      <i class="fas fa-user"></i>
                              </div>
                              <div class="div">
                                      <h5>Email id</h5>
                                      <input type="email" name="email" class="input">
                              </div>
                           </div>
                           <!-- password -->
                        <div class="input-div pass">
                              <div class="i"> 
                                   <i class="fas fa-lock"></i>
                              </div>
                              <div class="div">
                                   <h5>Password</h5>
                                   <input type="password" name="password" class="input">
                           </div>
                        </div>
                        <!-- confirm password -->
                        <div class="input-div pass">
                            <div class="i"> 
                                 <i class="fas fa-lock"></i>
                            </div>
                            <div class="div">
                                 <h5>Confirm Password</h5>
                                 <input type="password" name="confirm_password" class="input">
                         </div>
                        </div>
                        
                          
                     <div>
                      <a href="/user/signinPage" style="text-align: left;" id="signin-link">Already have an account?</a>
                     </div>
        
                     <input type="submit" class="btn" value="Sign Up" id="signin-btn">
                    </form>
                </div>
        
            </div>
        </div>
        
      
 </body> 
        